#!/usr/bin/env bash
#ddev-generated

## Description: Install and set up theme development tools in DDEV
## Usage: theme-install
## Example: ddev theme-install
## Aliases: install-theme-tools,thi,theme:install

# Abort if anything fails
set -e

#-------------------------- Helper functions --------------------------------

green='\033[0;32m'
yellow='\033[1;33m'
NC='\033[0m'

divider='===================================================\n'
construction='\xF0\x9F\x9A\xA7'
party='\xF0\x9F\x8E\x88 \xF0\x9F\x8E\x89 \xF0\x9F\x8E\x8A'
reverseparty='\xF0\x9F\x8E\x8A \xF0\x9F\x8E\x89 \xF0\x9F\x8E\x88'
rocket='\xF0\x9F\x9A\x80'
shark='\xF0\x9F\xA6\x88'
watch_command='ddev theme:watch'

#-------------------------- Settings --------------------------------

# Load configuration to get hosting provider and docroot
source /var/www/html/.ddev/scripts/load-config.sh
load_kanopi_config

# Get theme configuration from environment variables
THEME_PATH=$(printenv THEME 2>/dev/null || echo "wp-content/themes/custom/struts")

# Determine docroot based on hosting provider
case "${HOSTING_PROVIDER}" in
    "pantheon")
        DOCROOT="web"
        DOCROOT_PATH="/var/www/html/${DOCROOT}"
        ;;
    "wpengine")
        # Use configured DOCROOT from environment, fallback to 'web'
        DOCROOT="${DOCROOT:-web}"
        # Handle application root case (. or empty)
        if [ "$DOCROOT" = "." ] || [ -z "$DOCROOT" ]; then
            DOCROOT_PATH="/var/www/html"
        else
            DOCROOT_PATH="/var/www/html/${DOCROOT}"
        fi
        ;;
    "kinsta")
        DOCROOT="public"
        DOCROOT_PATH="/var/www/html/${DOCROOT}"
        ;;
    *)
        DOCROOT=$(printenv DOCROOT 2>/dev/null || echo "web")
        DOCROOT_PATH="/var/www/html/${DOCROOT}"
        ;;
esac

# Define full theme path
FULL_THEME_PATH="/var/www/html/${DOCROOT}/${THEME_PATH}"

#-------------------------- Execution -------------------------------------

# Theme initialization message
echo -e "\n ${shark} ${yellow} Installing theme development tools. ${NC} ${shark}\n"
echo -e "${green}${divider}${NC}"

# Move to the theme directory
echo -e "\n ${rocket} ${yellow} Navigating to theme directory: ${FULL_THEME_PATH} ${NC} ${rocket}"
echo -e "${green}${divider}${NC}"

# Check if theme directory exists
if [ ! -d "${FULL_THEME_PATH}" ]; then
    echo -e "\n${yellow}Theme directory not found: ${FULL_THEME_PATH}${NC}"
    echo -e "Please ensure your theme is located at the correct path or update THEME environment variable in .ddev/config.yaml"
    exit 1
fi

cd "${FULL_THEME_PATH}"

# Install NPM dependencies
echo -e "\n ${construction} ${yellow} Installing NPM dependencies. ${NC} ${construction}"
echo -e "${green}${divider}${NC}"

export NVM_DIR="$HOME/.nvm" || echo "export NVM_DIR=$HOME/.nvm"
source "$NVM_DIR/nvm.sh" || echo "source $NVM_DIR/nvm.sh"
echo "NVM version: $(nvm --version)"

# Use Node version specified in .nvmrc
if [ -f "${FULL_THEME_PATH}/.nvmrc" ]; then
    NODE_VERSION=$(cat "${FULL_THEME_PATH}/.nvmrc")
    echo "Using Node.js version: ${NODE_VERSION}"
    nvm install "${NODE_VERSION}" || echo "nvm install"
    nvm alias default "${NODE_VERSION}" || echo "nvm alias"
    nvm use || echo "nvm use"
else
    echo "No .nvmrc found, using default Node version"
    nvm use default || nvm use node
fi

npm install --save patch-package || echo "npm install"

# Compile theme assets
echo -e "\n ${construction} ${yellow} Compiling theme assets. ${NC} ${construction}"
echo -e "${green}${divider}${NC}"
npm run build || echo "npm run build"

# Completion message
echo -e "\n ${party} ${yellow} Theme setup complete! ${NC} ${reverseparty}"
echo -e "To start watching for file changes, run: ${yellow}${watch_command}${NC}"
echo -e "${green}${divider}${NC}"
