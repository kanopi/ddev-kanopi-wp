#!/usr/bin/env bash

## Description: Open the site or admin in your default browser using ddev launch
## Usage: wp-open [service]
## Example: "ddev wp-open" (opens the site)
## Example: "ddev wp-open admin" (opens WordPress admin)
## Aliases: open,wp:open
## OSTypes: darwin,linux,windows

#ddev-generated

SERVICE="${1:-}"

if [ "$SERVICE" = "cms" ] || [ "$SERVICE" = "admin" ]; then
    echo "🚀 Opening WordPress admin..."
    ddev launch "/wp-admin"
else
    echo "🌐 Opening site..."
    ddev launch
fi
